# Environment Configuration
# Copy this file to .env and update with your values

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=4041

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/eutonafila

# Security
# Generate a secure random string (minimum 32 characters)
# In production, use: openssl rand -base64 32
JWT_SECRET=change_me_in_production_use_a_long_random_string_at_least_32_chars

# CORS Configuration
# Allowed origin for CORS requests
CORS_ORIGIN=http://localhost:4040

# Shop Configuration
# Shop identifier/slug
SHOP_SLUG=mineiro
