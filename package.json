{
  "name": "eutonafila",
  "version": "1.0.0",
  "private": true,
  "description": "Queue management system for barbershops",
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "build:web": "pnpm --filter web build",
    "integrate:web": "node scripts/integrate-web.js",
    "build:api": "pnpm --filter api build",
    "build": "pnpm build:web && pnpm integrate:web && pnpm build:api",
    "start": "pnpm --filter api start",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed": "pnpm --filter api db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  }
}

